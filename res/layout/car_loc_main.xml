<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
	<TableRow
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    >
		<TextView  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_column="0"
		    android:layout_weight="1"     
		    android:text=" "
		    />
		 <TextView  
		    android:layout_width="wrap_content" 
		    android:layout_height="35dp" 
		    android:layout_column="1"
		    android:layout_weight="20"
		    android:textSize="24sp"
		    android:gravity="center_horizontal"
		    android:text="@string/Setting_caption"
		    />
		<TextView  
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_column="2"
		    android:layout_weight="1"     
		    android:text=" "
		    />
	</TableRow>
</TableLayout>
    
<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    >
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text="Signature Source"
		    />
	</TableRow>
    
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    >	    	    	
		<CheckBox
			android:layout_height="40dp"
			android:id="@+id/chkTurn"
			android:text="Turn">
		</CheckBox>
	</TableRow>
	
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    >	
		<CheckBox
			android:layout_height="40dp"
			android:id="@+id/chkCurve"
			android:text="Curve">
		</CheckBox>
	</TableRow>
	
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    >	
		<CheckBox
			android:layout_height="40dp"
			android:id="@+id/chkStop"
			android:text="Stop">
		</CheckBox>
	</TableRow>
	
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    >	
		<CheckBox
			android:layout_height="40dp"
			android:id="@+id/chkBaro"
			android:text="Barometer">
		</CheckBox>
	</TableRow>
	
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    >
		<CheckBox
			android:layout_height="40dp"
			android:id="@+id/chkWiFi"
			android:text="WiFi">
		</CheckBox>
	</TableRow>
	
	<TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    >
		<CheckBox
			android:layout_height="40dp"
			android:id="@+id/chkCell"
			android:text="Cellular">
		</CheckBox>
	</TableRow>
		
</TableLayout>


<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom"
    >    
    <TableRow
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    >
	    <Button android:layout_height="80dp"
				android:layout_width="0.0dip"
				android:id="@+id/btNext"
	    		android:layout_column="0"
			    android:layout_weight="1"
				android:text="Next"
				android:textSize="28sp"
				/>				    
	</TableRow>
</TableLayout>


</LinearLayout>


